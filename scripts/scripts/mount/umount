# Description
#	Umount a mount point
#

NAME="umount"
VERSION="$PACKAGE_VERSION"
DESC="Umount a mount point"
LICENSE="GPLv3"
COPYRIGHT="Copyright (c) 2006 Stefanos Harhalakis"
CONTACT="v13@v13.gr"

# Display help
do_help()
{
	cat << _END
Configuration options:
	MOUNTPOINT	The path to umount or the devicename
_END
}

# Check configuration
# return: 0: ok, 1: error
do_check_conf()
{
	[ -z "$MOUNTPOINT" ] && h_error "Missing MOUNTPOINT" && return 2

	return 0
}

# Do backup
do_run()
{
	if umount "$MOUNTPOINT" ; then
		h_msg 6 "Umounted $MOUNTPOINT"
		R=0
	else
		h_error "Failed to umount $MOUNTPOINT"
		R=1
	fi

	return $R
}

