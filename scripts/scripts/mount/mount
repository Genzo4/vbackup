# Description
#	Mount a partition
#

NAME="mount"
VERSION="$PACKAGE_VERSION"
DESC="Mount a partition"
LICENSE="GPLv2"
COPYRIGHT="Copyright (c) 2006 Stefanos Harhalakis"
CONTACT="v13@v13.gr"

# Display help
do_help()
{
	cat << _END
Configuration options:
	DEVICE		The device name
	MOUNTPOINT	Where to mount it (required)
	OPTIONS		Mount options, not including -o
	FSTYPE		Filesystem type

	If DEVICE is not defined an /etc/fstab entry must exist
_END
}

# Check configuration
# return: 0: ok, 1: error
do_check_conf()
{
	[ -z "$MOUNTPOINT" ] && h_error "Missing MOUNTPOINT" && return 2

	return 0
}

# Do backup
do_run()
{
	local	A
	local	B
	local	C

	if [ ! -z "$DEVICE" ] ; then
		A="$DEVICE"
	fi

	if [ ! -z "$FSTYPE" ] ; then
		B="-t $FSTYPE"
	fi

	if [ ! -z "$OPTIONS" ] ; then
		C="-o $OPTIONS"
	fi

	if mount $A "$MOUNTPOINT" $B $C ; then
		R=0
		h_msg 6 "Mounted $MOUNTPOINT"
	else
		h_error "Failed to mount $MOUNTPOINT"
		R=3
	fi

	return $R
}

