NAME="mount"
VERSION="0.0.0"
DESC="Mount a partition"

# Display help
do_help()
{
	cat << _END
Configuration options:
	DEVICE		The device name (optional)
	MOUNTPOINT	Where to mount it
	FSTYPE		Filesystem to use (optional)
	OPTIONS		Misc options, not including -o (optional) 

	If DEVICE is not defined an /etc/fstab entry must exist
_END
}

# Check configuration
# return: 0: ok, 1: error
do_check_conf()
{
	[ -z "$MOUNTPOINT" ] && echo "Missing MOUNTPOINT" && return 1

	return 0
}

# Do backup
do_run()
{
	local	A
	local	B
	local	C

	if [ ! -z "$DEVICE" ] ; then
		A="$DEVICE"
	fi

	if [ ! -z "$FSTYPE" ] ; then
		B="-t $FSTYPE"
	fi

	if [ ! -z "$OPTIONS" ] ; then
		C="-o $OPTIONS"
	fi

	if mount $A $MOUNTPOINT $B $C ; then
		R=0
	else
		R=2
	fi

	return $R
}

