NAME="pgsql"
VERSION="1.0.0"
DESC="Backup PostgreSQL databases"
LICENSE="GPLv2"
COPYRIGHT="Copyright (c) 2006 Stefanos Harhalakis"
CONTACT="v13@priest.com"

# Display help
do_help()
{
	cat << _END
Configuration options:
	DATABASES	A space separated list of databases to backup.
			Set this to '-' to backup all databases. (required)
	PGUSER		The username to use to connect
	PASSWORD	The password to use to connect
	PSQL		The path to psql executable
	PGDUMP		The path to pg_dump executable
	SUUSER		Do an 'su' to this user (example: postgres)
	DESTDIR		The destination directory (required)
	ALL		Dump template[0-9] too (y/n)
_END
}

# Check configuration
# return: 0: ok, 1: error
do_check_conf()
{
	[ -z "$DATABASES" ] && h_error "Missing DATABASES" && return 1
#	[ -z "$USER" ] && echo "Missing USER" && return 1
	[ -z "$DESTDIR" ] && h_error "Missing DESTDIR" && return 1

	return 0
}

# Do backup
do_run()
{
	# Initialize
	if [ -z "$PSQL" ] ; then
		PSQL="psql";
	fi

	if [ -z "$PGDUMP" ] ; then
		PGDUMP="pg_dump"
	fi

	for t in $PSQL $PGDUMP ; do
		if ! which $t > /dev/null ; then
			h_error "Could not find '$t'"
			return 1
		fi
	done

	if ! [ -z "$PGUSER" ] ; then
		P_USER="-U $PGUSER"
	fi

	if ! [ -z "$PASSWORD" ] ; then
		export PGPASSWORD="$PASSWORD"
	fi

	if [ "$ALL" = "y" ] || [ "$ALL" = "Y" ] ; then
		P_FILT1=""
	else
		P_FILT1="| grep -v 'template[0-9]'"
	fi

	if [ "$DATABASES" = "-" ] ; then
		CMD="$PSQL -F , -A $P_USER -P tuples_only -P pager=off -l | \
			cut -f 1 -d, $P_FILT1"
		if [ -z "$SUUSER" ] ; then
			DATABASES=`$CMD`
#			DATABASES=`$PSQL -F , -A $P_USER\
#					-P tuples_only -P pager=off -l | \
#					cut -f 1 -d, | \
#					grep -v template0`
		else
			DATABASES=`su - $SUUSER -c "$CMD"`
#			DATABASES=`su - $SUUSER -c "$PSQL -F , -A $P_USER\
#					-P tuples_only -P pager=off -l | \
#					cut -f 1 -d, | \
#					grep -v template0"`
		fi
	fi

	h_formdest "$DESTDIR"
	h_ensuredir "$R_DESTDIR"

	FIRST=1
	for db in $DATABASES ; do
		h_msg 6 "Dumping: $db to $R_DESTDIR/$db.gz"
		CMD="$PGDUMP $P_USER $db"
		if [ -z "$SUUSER" ] ; then
			$CMD
#			$PGDUMP $P_USER $db | gzip > $R_DESTDIR/$db.gz
		else
			su - $SUUSER -c "$CMD" | gzip > $R_DESTDIR/$db.gz
#			su - $SUUSER -c "$PGDUMP $P_USER $db" | \
#				gzip > $R_DESTDIR/$db.gz
		fi
	done
}

