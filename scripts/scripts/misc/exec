NAME="exec"
VERSION="$PACKAGE_VERSION"
DESC="Execute some shell commands"
LICENSE="GPLv2"
COPYRIGHT="Copyright (c) 2012 Stefanos Harhalakis"
CONTACT="v13@v13.gr"

# Display help
do_help()
{
	cat << _END
Configuration:

	Define the function custom_exec() in your config file. It will
	be called to run custom commands.
_END
}

# Check configuration
# return: 0: ok, 1: error
do_check_conf()
{
#	[ -z "$KOKO" ] && h_error "Missing KOKO" && return 1

	return 0
}

# Do backup
do_run()
{
	if [ "x$ABORT" = "x1" ] ; then
		return 0
	fi

	custom_exec
}

