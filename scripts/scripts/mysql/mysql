# The name of the backup script
NAME="mysql"
# The version of the script
VERSION="0.0.1"
# A short description of the script
DESC="MySQL backup"
# A name for the directory where the backups will be located
DIRNAME="$NAME"

# Display help
do_help()
{
	cat << _END
Configuration options:

_END
}

# Check configuration
# return: 0: ok, 1: error
do_check_conf()
{
	[ -z "$KOKO" ] && echo "Missing KOKO" && return 1

	return 0
}

# Do backup
do_run()
{
}

